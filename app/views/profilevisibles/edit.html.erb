<div class="container">
	<br><br>

	<% flash.each do |key, value| %>
		<div style="margin-top: -10px;">
			<b>Notice</b>: <i><%= value %></i>
			<br><br>
		</div>
	<% end %>

	<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' %>
		<div class="sketch">
			<h1>
				<button onclick="goBack()" class="btn btn-warning" style="margin-right: 10px;"><i class="fas fa-backward" style="color: white;"></i></button>
				Student Visibility of Profiles <i class="fas fa-eye-slash"></i>
			</h1>
		</div>
		<br>
		<%= form_for @profilevisible do |f| %>

			<b>Student: </b><%= @user.fname + ' ' + @user.lname + ' (' + @user.email + ')' %><br>
			<b>Classroom: </b><%= @classroom.name %><br>
			<b>Profile: </b><%= @profile.fname + ' ' + @profile.lname %><br>

			<%= f.hidden_field :user_id, :value => @profilevisible.user_id %>
			<%= f.hidden_field :classroom_id, :value => @profilevisible.profile_id %>
			<%= f.hidden_field :classroomoffering_id, :value => @profilevisible.classroomoffering_id %>

			<br>
			<b>Profile Attribute Visibility</b>
			<br>

			<label class="checkbox_container" style="font-size: 12pt;">
					<%= f.label "Last Name" %>
					<%= f.check_box :lname %>
				 <span class="checkmark"></span>
			</label>

			<label class="checkbox_container" style="font-size: 12pt;">
					<%= f.label "Grade Level" %>
					<%= f.check_box :gradelevel %>
				 <span class="checkmark"></span>
			</label>

			<label class="checkbox_container" style="font-size: 12pt;">
					<%= f.label "Ethnicity" %>
					<%= f.check_box :ethnicity %>
				 <span class="checkmark"></span>
			</label>

			<label class="checkbox_container" style="font-size: 12pt;">
					<%= f.label "IEP" %>
					<%= f.check_box :iep %>
				 <span class="checkmark"></span>
			</label>

			<label class="checkbox_container" style="font-size: 12pt;">
					<%= f.label "Background" %>
					<%= f.check_box :background %>
				 <span class="checkmark"></span>
			</label>

			<label class="checkbox_container" style="font-size: 12pt;">
					<%= f.label "Math" %>
					<%= f.check_box :math %>
				 <span class="checkmark"></span>
			</label>

			<label class="checkbox_container" style="font-size: 12pt;">
					<%= f.label "ELA" %>
					<%= f.check_box :ela %>
				 <span class="checkmark"></span>
			</label>

			<%= f.submit "Submit", class: "btn btn-primary" %>
			<br><br>
		<% end %>

		<p><%= link_to "Delete Custom Visibility", profilevisible_path(@profilevisible),
                         :data => {:confirm => "Are you sure you want to delete this Custom Visibility?",
                                   :method => "delete"} %></p>

	<% else %>

	<b>You do not have permission to access this page!</b>
	<br>
	<% end %>


	<button onclick="goBack()" class="btn btn-warning"><i class="fas fa-backward" style="color: white;"></i></button>

	<br><br>

</div>
