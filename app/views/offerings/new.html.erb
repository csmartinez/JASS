<div class="container">
	<br><br>

	<% if current_user %>

		<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' %>

		<div class="sketch">
			<h1>Build a New TIP Class</h1>
		</div>

		<br>

		<%= form_for @offering do |f| %>
			<%= f.label :title %>
			<%= f.text_field :name %> <br>
			<%= f.label :description %> <br>
			<%= f.text_area :description, cols: "60", rows: "4" %> <br>

		<br><br>

		<table class="table">
			<thead class="thead">
				<tr style="colSort">
					<th scope="col">Learning Activity Name</th>
					<th scope="col">Learning Activity Description</th>
					<th scope="col">Add to TIP Class</th>
				</tr>
			</thead>

			<tbody>

			 <% @exercises.each do |exercise| %>
					 <tr>
						 <td><%= link_to exercise.name, exercise_path(exercise), target: "_blank" %></td>
						 <td><%= exercise.description %> </td>
						 <td>
							 <label class="checkbox_container">
								<%= check_box_tag "offering[exercise_ids][]", exercise.id,  f.object.exercises.include?(exercise) %>
								<span class="checkmark"></span>
							 </label>
						 </td>
					 </tr>
			 <% end %>
		 </tbody>
		</table>

		<br><br>

		<table class="table">
			<thead class="thead">
				<tr style="colSort">
					<th scope="col">Name</th>
					<th scope="col">User E-mail</th>
					<th scope="col">Add to TIP Class</th>
				</tr>
			</thead>

			<tbody>
				<% name = "" %>

			 <% @users.each do |user| %>
			 	<% if user.acc_type == 'student'%>
					<%# name is user first name plus last name %>
					 <tr>
						 <td><%= link_to user.fname, user_path(user), target: "_blank" %></td>
						 <td><%= user.email %> </td>
						 <td>
							 <label class="checkbox_container">
								<%= check_box_tag "offering[user_ids][]", user.id,  f.object.users.include?(user) %>
								<span class="checkmark"></span>
							 </label>
						 </td>
					 </tr>
					<% end %>
			 <% end %>
		 </tbody>
		</table>

		<br><br>

		<table class="table">
			<thead class="thead">
				<tr style="colSort">
					<th scope="col">Classroom Name</th>
					<th scope="col">Classroom Description</th>
					<th scope="col">Add to TIP Class</th>
				</tr>
			</thead>

			<tbody>

			 <% @classrooms.each do |classroom| %>
					 <tr>
						 <td><%= link_to classroom.name, classroom_path(classroom), target: "_blank" %></td>
						 <td><%= classroom.description %> </td>
						 <td>
							 <label class="checkbox_container">
								<%= check_box_tag "offering[classroom_ids][]", classroom.id,  f.object.classrooms.include?(classroom) %>
								<span class="checkmark"></span>
							 </label>
						 </td>
					 </tr>
			 <% end %>
		 </tbody>
		</table>

			<%= f.submit "Create TIP Class", :class => 'btn btn-light'  %>
		<% end %>

		<br>
		<p><%= link_to "Return to TIP classes", offerings_path %></p>

		<% else %>

		<b>You do not have permission to access this page!</b>

		<% end %>

	<% else %>

	<b>You do not have permission to access this page!</b>

	<% end %>

</div>
