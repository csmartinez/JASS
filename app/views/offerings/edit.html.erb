<div class="container">
	<br><br>

	<% if current_user %>

		<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' %>

		<div class="sketch">
			<h1>Edit TIP Class</h1>
		</div>
		<br>

		<% if @offering.errors.any? %>
		  <h3>Please fix these errors:</h3>
		  <ul>
		    <% @offering.errors.full_messages.each do |message| %>
		      <li><%= message %></li>
		    <% end %>
		  </ul>
		<% end %>

		<%= form_for @offering do |f| %>
			<%= f.label :description %>
		  <%= f.text_field :description %>
			<br><br>

			<div class="sketch">
				<h2>Exercises</h2>
			</div>

			<table class="table">
				<thead class="thead">
					<tr style="colSort">
						<th scope="col">Exercise Name</th>
						<th scope="col">Exercise Description</th>
						<th scope="col">Add to TIP Class</th>
					</tr>
				</thead>

				<tbody>

				 <% @exercises.each do |exercise| %>
						 <tr>
							 <td><%= exercise.name %> </td>
							 <td><%= exercise.description %> </td>
							 <td><%= check_box_tag "offering[exercise_ids][]", exercise.id,  f.object.exercises.include?(exercise) %></td>
						 </tr>
				 <% end %>
			 </tbody>
			</table>

			<br>
			<div class="sketch">
				<h2>Enrollment</h2>
			</div>

			<table class="table">
				<thead class="thead">
					<tr style="colSort">
						<th scope="col">User E-mail</th>
						<th scope="col">Add to TIP Class</th>
					</tr>
				</thead>

				<tbody>

				 <% @users.each do |user| %>
					 <tr>
						 <td><%= user.email %> </td>
						 <td><%= check_box_tag "offering[user_ids][]", user.id,  f.object.users.include?(user) %></td>
					 </tr>
				 <% end %>
			 </tbody>
			</table>

			<br>
			<div class="sketch">
				<h2>Virtual Classrooms</h2>
			</div>

			<table class="table">
				<thead class="thead">
					<tr style="colSort">
						<th scope="col">Classroom Name</th>
						<th scope="col">Classroom Description</th>
						<th scope="col">Add to TIP Class</th>
					</tr>
				</thead>

				<tbody>

				 <% @classrooms.each do |classroom| %>
						 <tr>
							 <td><%= classroom.name %> </td>
							 <td><%= classroom.description %> </td>
							 <td><%= check_box_tag "offering[classroom_ids][]", classroom.id,  f.object.classrooms.include?(classroom) %></td>
						 </tr>
				 <% end %>
			 </tbody>
			</table>

			<br>
		  <%= f.submit "Update TIP Class", :class => 'btn btn-light' %>
		<% end %>

		<br><br>
		<p><%= link_to "Delete TIP Class", offering_path(@offering),
                         :data => {:confirm => "Are you sure you want to delete this TIP class?",
                                   :method => "delete"} %></p>
		<br>
		<p><%= link_to "Return to TIP Classes", offerings_path %></p>

		<% else %>

		<b>You do not have permission to access this page!</b>

		<% end %>

	<% else %>

	<b>You do not have permission to access this page!</b>

	<% end %>

</div>
