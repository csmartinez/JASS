<div class="container">
	<br><br>

	<% if current_user %>

		<%# Code to check if the TIP is enrolled in this offering %>
		<% display = false %>

		<% current_user.offerings.each do |offering| %>
			<% if offering.id == @offering.id %>
				<% display = true %>
			<% end %>
		<% end %>

		<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' || display == true %>

		<div class="sketch">
			<h1><%= @offering.name %></h1>
		</div>
		<br>
		<b>Description: </b><%= @offering.description %><br>
		<br><br>

		<div class="sketch">
			<h2>Exercises</h2>
		</div>

		<table class="table">
			<thead class="thead">
				<tr style="colSort">
					<th scope="col">Learning Activity Name</th>
					<th scope="col">Learning Activity Description</th>
				</tr>
			</thead>

			<tbody>
			 <% @offering.exercises.each do |exercise| %>
					 <tr>
						 <td><%= exercise.name %> </td>
						 <td><%= exercise.description %> </td>
					 </tr>
			 <% end %>
		 </tbody>
		</table>

		<br>
		<div class="sketch">
			<h2>Enrollment</h2>
		</div>

		<table class="table">
			<thead class="thead">
				<tr style="colSort">
					<th scope="col">User E-mail</th>
					<th scope="col">Role</th>
					<th scope="col">Activity Progress</th>
				</tr>
			</thead>

			<tbody>

			 <% @offering.enrollments.each do |enrollment| %>
					 <tr>
						 <td><%= enrollment.user.email %> </td>
						 <% if enrollment.role != 'instructor' %>
						 	<td>TIP</td>
						 <% else %>
						 	<td>Instructor</td>
						 <% end %>
						 <td><%= link_to "View Activity Progress", user_progress_progressions_path(enrollment.user.id) %></td>
					 </tr>
			 <% end %>
		 </tbody>
		</table>

		<br>
		<div class="sketch">
			<h2>Virtual Classrooms</h2>
		</div>

		<table class="table">
			<thead class="thead">
				<tr style="colSort">
					<th scope="col">Classroom Name</th>
					<th scope="col">Classroom Description</th>
				</tr>
			</thead>

			<tbody>

			 <% @offering.classrooms.each do |classroom| %>
					 <tr>
						 <td><%= classroom.name %> </td>
						 <td><%= classroom.description %> </td>
					 </tr>
			 <% end %>
		 </tbody>
		</table>
		<br>
		<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' %>
			<p><%= link_to "Return to managing  TIP classes", manage_offerings_url %></p>
		<% else %>
			<p><%= link_to "Return to TIP classes", offerings_path %></p>
		<% end %>

		<% else %>

		<b>You do not have permission to access this page!</b>

		<% end %>

	<% else %>

	<b>You do not have permission to access this page!</b>

	<% end %>

</div>
