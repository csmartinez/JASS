<div class="container">
	<br><br>

	<% if current_user %>

		<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' %>

		<div class="sketch">
			<h1>Manage My TIP Classes</h1>
		</div>

		Below are all your TIP classes that you instruct.
		<br><br>

		<table class="table">
			<thead class="thead">
				<tr style="colSort">
					<th scope="col">View TIP Class</th>
					<th scope="col">Edit TIP Class</th>
				</tr>
			</thead>
			<tbody>
				<% current_user.enrollments.each do |enrollment| %>
					<% @offerings.each do |offering| %>
						<% if offering.id == enrollment.offering_id %>
							<tr>
								<td><%= link_to offering.description, offering_path(offering) %></td>
								<td><%= link_to 'Edit TIP Class', edit_offering_url(offering) %></td>
							</tr>
						<% end %>
					<% end %>
				<% end %>
			</tbody>
		</table>

		<br>
		<p><%= link_to "Return to TIP Classes", offerings_path %></p>

		<% else %>

		<b>You do not have permission to access this page!</b>

		<% end %>

	<% else %>

	<b>You do not have permission to access this page!</b>

	<% end %>

</div>
