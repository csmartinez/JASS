<div class="container">
	<br><br>

	<% if current_user %>

		<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' %>

		<div class="sketch">
			<h1>
				<button onclick="goBack()" class="btn btn-warning" style="margin-right: 10px;"><i class="fas fa-backward" style="color: white;"></i></button>
				Create a New Student Profile
			</h1>
		</div>

		<br>

		<%= form_for @profile do |f| %>
			<div class="row">
				<div class="col">
				  <%= f.label :first_name %>
				  <%= f.text_field :fname, class: "form-control" %>
					<%= f.label :last_name %>
				  <%= f.text_field :lname, class: "form-control" %>
					<%= f.label :math %>
				  <%= f.text_field :math, class: "form-control" %>
					<%= f.label :ela %>
				  <%= f.text_field :ela, class: "form-control" %>
					<%= f.label :"Beginning of School" %>
					<%= f.text_area :beginning_of_school, cols: "60", rows: "3", autocomplete: "beginning_of_school", class: "form-control" %>
					<%= f.label :"Writing Sample" %>
					<%= f.text_area :writing_sample, cols: "60", rows: "3", autocomplete: "writing_sample", class: "form-control" %>
					<%= f.label :"Math Sample" %>
					<%= f.text_area :math_sample, cols: "60", rows: "3", autocomplete: "math_sample", class: "form-control" %>
					<%= f.label :"Family Background PBL" %>
					<%= f.text_area :family_background_PBL, cols: "60", rows: "3", autocomplete: "family_background_PBL", class: "form-control" %>
					<%= f.label :"Family Survey" %>
					<%= f.text_area :family_survey, cols: "60", rows: "3", autocomplete: "family_survey", class: "form-control" %>
				</div>

				<div class="col">
					<%= f.label :grade_level %>
					<%= f.number_field :grade, class: "form-control" %>
					<%= f.label :iep %>
				  <%= f.text_field :iep, class: "form-control" %>
					<%= f.label :ethnicity %>
				  <%= f.text_field :ethnicity, class: "form-control" %>
					<%= f.label :"Background" %>
					<%= f.text_area :background, cols: "60", rows: "3", autocomplete: "background", class: "form-control" %>
					<%= f.label :"Story Part 1" %>
					<%= f.text_area :story_1, cols: "60", rows: "3", autocomplete: "story_1", class: "form-control" %>
					<%= f.label :"Story Part 2" %>
					<%= f.text_area :story_2, cols: "60", rows: "3", autocomplete: "story_2", class: "form-control" %>
					<%= f.label :"Story Part 3" %>
					<%= f.text_area :story_3, cols: "60", rows: "3", autocomplete: "story_3", class: "form-control" %>
					<%= f.label :"Funds of Knowledge" %>
					<%= f.text_area :funds_of_knowledge, cols: "60", rows: "3", autocomplete: "funds_of_knowledge", class: "form-control" %>
					<%= f.label :"Academic Data" %>
					<%= f.text_area :academic_data, cols: "60", rows: "3", autocomplete: "academic_data", class: "form-control" %>
				</div>
			</div>
			<br>
		  <%= f.submit "Create Profile", :class => 'btn btn-primary'  %>
		<% end %>

		<% else %>

		<b>You do not have permission to access this page!</b>

		<% end %>

	<% else %>

	<b>You do not have permission to access this page!</b>

	<% end %>

	<br>
	<button onclick="goBack()" class="btn btn-warning"><i class="fas fa-backward" style="color: white;"></i></button>

	<br><br>

</div>
