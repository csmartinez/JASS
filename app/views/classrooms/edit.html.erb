<div class="container">
	<br><br>

	<% if current_user %>

		<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' %>

    <% counter = 0 %>

    <% @classroomofferings.all.each do |classroomoffering| %>

      <% if classroomoffering.classroom_id == @classroom.id %>

        <% counter = counter + 1 %>

      <% end %>

    <% end %>

		<div class="sketch">
			<h1>Edit Classroom <%= @classroom.name %></h1>
		</div>
		<br>
		<div class="alert alert-warning" role="alert">
			<b>Warning!</b> Adding or removing profiles from this classroom will affect all
			administrators, faculty and teachers in training using it. This classroom is in
      use by: <%=counter%> TIP class(es).
		</div>

		<br>

		<% if @classroom.errors.any? %>
		  <h3>Please fix these errors:</h3>
		  <ul>
		    <% @classroom.errors.full_messages.each do |message| %>
		      <li><%= message %></li>
		    <% end %>
		  </ul>
		<% end %>



		<%= form_for @classroom do |f| %>
		  <%= f.label :name %>
		  <%= f.text_field :name, :value => @classroom.name %> <br>
			<%= f.label :description %> <br>
		  <%= f.text_area :description, cols: "60", rows: "4",:value => @classroom.description %> <br>
			<%= f.hidden_field :user_id, :value => current_user.id %>
			<br><br>

      <table class="table">

      <thead class="thead">
        <tr style="colSort">
          <th scope="col"><%= sort_link "fname", "Student Name" %></th>
          <th scope="col"><%= sort_link "status", "Add to Classroom" %></th>
        </tr>
      </thead>

      <tbody>

       <% @profiles.each do |profile| %>
           <tr>
             <td><a href="" data-toggle="modal" data-target="#Modal<%= profile.id %>"><%= profile.fname %> <%= profile.lname %></a> </td>
             <td><%= check_box_tag "classroom[profile_ids][]", profile.id,  f.object.profiles.include?(profile) %></td>

				 		<!-- Modal -->
				 		<div class="modal fade" id="Modal<%= profile.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
				 		  <div class="modal-dialog" role="document">
				 		    <div class="modal-content">
				 		      <div class="modal-header">
				 		        <h5 class="modal-title" id="exampleModalLabel"><%= profile.fname %> <%= profile.lname %></h5>
				 		        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
				 		          <span aria-hidden="true">&times;</span>
				 		        </button>
				 		      </div>
				 		      <div class="modal-body">
										<b>Name:</b> <%= profile.fname %> <%= profile.lname %> <br>
	 		 				      <b>Ethnicity:</b> <%= profile.ethnicity %>  <br>
	 		 							<b>IEP:</b> <%= profile.iep %> <br>
	 		 							<b>Math:</b> <%= profile.math %> <br>
	 		 							<b>ELA:</b> <%= profile.ela %> <br>
										<b>Background:</b> <br> <%= profile.background %>
				 		      </div>
				 		      <div class="modal-footer">
				 		        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				 		      </div>
				 		    </div>
				 		  </div>
				 		</div>

           </tr>
       <% end %>
     </tbody>

    </table>

			<br>
		  <%= f.submit "Update Classroom", :class => 'btn btn-light' %>
		<% end %>

		<br><br>
		<p><%= link_to "Delete Classroom", classroom_path(@classroom),
                         :data => {:confirm => "Are you sure you want to delete this classroom?",
                                   :method => "delete"} %></p>
		<br>
		<p><%= link_to "Return to classrooms", classrooms_path %></p>

		<% else %>

		<b>You do not have permission to access this page!</b>

		<% end %>

	<% else %>

	<b>You do not have permission to access this page!</b>

	<% end %>

</div>
