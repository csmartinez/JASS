<div class="container">
	<br><br>
	<div class="sketch">
		<h1>Classroom View</h1>
	</div>
	<br>
	<b>Name: </b><%= @classroom.name %><br>
	<b>Description: </b><%= @classroom.description %><br>
	<br>

	<table class="table">
	  <thead class="thead">
	    <tr>
	      <th scope="col">Student ID</th>
	      <th scope="col">Name</th>
	      <th scope="col">Profile</th>
	    </tr>
	  </thead>
	  <tbody>
			<% @classroom.profiles.each do |profile| %>
					<tr>
						<td><%= profile.id %></td>
						<td><%= profile.fname %> <%= profile.lname %></td>
			      <td>
							<button type="button" class="btn btn-light btn-sm">
								<a data-toggle="modal" data-target="#profile">See Profile</a>
							</button>
						</td>
			    </tr>

					<div class="modal fade" id="profile" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-top: 180px">
					  <div class="modal-dialog" role="document">
					    <div class="modal-content">
					      <div class="modal-header">
									<h5 class="modal-title">Student Profile</h5>
					        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
					          <span aria-hidden="true">&times;</span>
					        </button>
					      </div>
					      <div class="modal-body">

									<%= profile.fname %> <%= profile.lname %>

					      </div>
								<div class="modal-footer">
					        <button type="button" class="btn btn-primary">Save changes</button>
					        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					      </div>
					    </div>
					  </div>
					</div>

			<% end %>
	  </tbody>
	</table>

	<p><%= link_to "Return to classrooms", classrooms_path %></p>
</div>
