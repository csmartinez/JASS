<div class="container">
	<br><br>
  <h2>Sign up <i class="fas fa-user"></i></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

		<div class="field">
			<%= f.label :"First Name" %><br />
      <%= f.text_field :fname, autocomplete: "fname"%>
		</div>

		<div class="field">
			<%= f.label :"Last Name" %><br />
      <%= f.text_field :lname, autocomplete: "lname"%>
		</div>

		<div class="field">
			<%= f.label :"Biography" %><br />
      <%= f.text_area :bio, cols: "60", rows: "4", autocomplete: "bio" %>
		</div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
			<%= f.hidden_field :acc_type, :value => 'student' %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
		<br>
    <div class="actions">
      <%= f.submit "Sign up", :class => "btn btn-primary" %>
    </div>
  <% end %>
	<br>
  <%= render "devise/shared/links" %>
</div>
