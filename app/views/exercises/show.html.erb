<div class="container">
	<br><br>

	<% if current_user %>

		<%# Code to check if this exercise is related to a TIP through an offering %>
		<% display = false %>

		<% current_user.offerings.each do |offering| %>
			<% offering.exercises.each do |exercise| %>
				<%# Maybe in the future we add an array to collect these offerings and diplay them below %>
				<% if exercise.id == @exercise.id %>
					<% display = true %>
				<% end %>
			<% end %>
		<% end %>

		<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' || display == true %>

		<div class="sketch">
			<h1><%= @exercise.name %></h1>
		</div>
		<br>
		<b>Description: </b><%= @exercise.description %><br>
		<br><br>

		<div class="sketch">
			<h3>Scenarios</h3>
		</div>
		<table class="table">
		  <thead class="thead">
		    <tr style="colSort">
		      <th scope="col">Name</th>
					<th scope="col">Description</th>
		      <th scope="col">Link</th>
		    </tr>
		  </thead>
		  <tbody>

				<% @scenarios.each do |scenario| %>
						<tr>
							<td><%= scenario.name %> </td>
							<td><%= scenario.description %></td>
							<td><%= scenario.link %></td>
						</tr>
				<% end %>
		  </tbody>
		</table>
		<br>
			<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' %>
				<p><%= link_to "Return to managing exercises", manage_exercises_url %></p>
			<% else %>
				<p><%= link_to "Return to exercises", exercises_path %></p>
			<% end %>

		<% else %>

		<b>You do not have permission to access this page!</b>

		<% end %>

	<% else %>

	<b>You do not have permission to access this page!</b>

	<% end %>

</div>
