<div class="container">
	<br><br>

	<% if current_user %>

		<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' %>

		<div class="sketch">
			<h1>Manage Learning Modules <i class="fas fa-folder-open"></i></h1>
		</div>

		Below are all Learning Activities.
		<br><br>




		<table class="table">
			<thead class="thead">
				<tr style="colSort">
					<th scope="col">View Learning Activiy <i class="fas fa-external-link-alt" style="color: white;"></th>
					<th scope="col">Edit Learning Activity <i class="fas fa-external-link-alt" style="color: white;"></th>
				</tr>
			</thead>
			<tbody>
				<% @exercises.each do |exercise| %>
						<tr>
							<td><%= link_to exercise.name, exercise_path(exercise), target: "_blank" %></td>
							<td><%= link_to 'Edit Learning Activity', edit_exercise_url(exercise), target: "_blank" %></td>
						</tr>
				<% end %>
			</tbody>
		</table>

		<br>
		<p><%= link_to "Return to Learning Activities", exercises_path %></p>

		<% else %>

		<b>You do not have permission to access this page!</b>

		<% end %>

	<% else %>

	<b>You do not have permission to access this page!</b>

	<% end %>

</div>
