<div class="container">
	<br><br>

	<% if current_user %>

	<%= form_tag(manage_exercises_url, method: :get) do %>
		<%= text_field_tag(:search, params[:search])%>
		<%= submit_tag "Search" %>
	<% end %>


		<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' %>

		<div class="sketch">
			<h1>Manage Learning Activities</h1>
		</div>





		<br>

		Below are all exercises.

		Below are all Learning Activities.
		<br><br>

		<table class="table">
			<thead class="thead">
				<tr style="colSort">
					<th scope="col">View Exercises</th>
					<th scope="col">Edit Exercise</th>
				</tr>
			</thead>
			<tbody>
				<% @exercises.each do |exercise| %>
						<tr>
							<td><%= link_to exercise.name, exercise_path(exercise) %></td>
							<td><%= link_to 'Edit Learning Activity', edit_exercise_url(exercise) %></td>
						</tr>
				<% end %>
			</tbody>
		</table>

		<br>
		<p><%= link_to "Return to Learning Activities", exercises_path %></p>

		<% else %>

		<b>You do not have permission to access this page!</b>

		<% end %>

	<% else %>

	<b>You do not have permission to access this page!</b>

	<% end %>

</div>
