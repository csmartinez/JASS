<div class="container">
	<br><br>

	<% if current_user %>

		<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' %>

		<div class="sketch">
			<h1>Add an Learning Activity</h1>
		</div>

		<br>

		<%= form_for @exercise do |f| %>
		  <%= f.label :name %>
		  <%= f.text_field :name %> <br>
			<%= f.label :description %> <br>
			<%= f.text_area :description, cols: "60", rows: "4" %> <br>
			<%= f.hidden_field :offering_id, :value => 0 %>

		<br><br>

		<table class="table">
			<thead class="thead">
				<tr style="colSort">
					<th scope="col">Activity Name</th>
					<th scope="col">Add to Learning Activity</th>
				</tr>
			</thead>

			<tbody>

			 <% @scenarios.each do |scenario| %>
					 <tr>
						 <td><%= scenario.name %> </td>
						 <td>
						 	<label class="checkbox_container">
						 		 <%= check_box_tag "exercise[scenario_ids][]", scenario.id,  f.object.scenarios.include?(scenario) %>
						 		 <span class="checkmark"></span>
						  </label>
						 </td>
					 </tr>
			 <% end %>
		 </tbody>

		</table>

			<%= f.submit "Create Learning Activity", :class => 'btn btn-light'  %>
		<% end %>

		<br>
		<p><%= link_to "Return to Learning Activities", exercises_path %></p>

		<% else %>

		<b>You do not have permission to access this page!</b>

		<% end %>

	<% else %>

	<b>You do not have permission to access this page!</b>

	<% end %>

</div>
