<div class="container">
	<br><br>
	<div class="sketch">
		<h1>Virtual Classrooms</h1>
	</div>

	<% if current_user %>

		<% if current_user.acc_type == 'superadmin' || current_user.acc_type == 'admin' || current_user.acc_type == 'faculty' %>

			Create and manage virtual classrooms and profiles.
			<br><br>
			<div class="btn-group" role="group" aria-label="Basic example">
				<%= button_to "Create a Classroom", :new_classroom, :class => "btn btn-light vc", :method => "get" %>
				<%= button_to "Create a Student Profile", :new_profile, :class => "btn btn-light vc", :method => "get" %>
			</div>
			<br><br>

			<h3>My Classrooms</h3>
			<br>

			<table class="table">
			  <thead class="thead">
			    <tr style="colSort">
						<th scope="col">View Profiles</th>
						<!-- <th scope="col">Edit</th>
						<th scope="col">Assign to Student</th>
						<th scope="col">View Students</th> -->
			    </tr>
			  </thead>
			  <tbody>
					<% current_user.classrooms.each do |classroom| %>
							<tr>
					      <td><%= link_to classroom.name, classroom_path(classroom) %></td>
								<!-- <td>Edit Profiles</td>
								<td>Dropdown + Submit Button</td>
								<td>Students</td> -->
							</tr>
					<% end %>
			  </tbody>
			</table>

			<br>
			<h3>All Classrooms </h3>
			<br>

			<table class="table">
			  <thead class="thead">
			    <tr style="colSort">
			      <th scope="col">View Profiles</th>
						<!-- <th scope="col">Add to My Classrooms</th> -->
			    </tr>
			  </thead>
			  <tbody>
					<% @classrooms.each do |classroom| %>
							<tr>
					      <td><%= link_to classroom.name, classroom_path(classroom) %></td>
								<!-- <td>Add Classroom Button</td> -->
							</tr>
					<% end %>
			  </tbody>
			</table>

		<% else %>

			<p>Interact with virtual classrooms</p>

		<% end %>

	<% else %>

	<p>You are not signed in! Please click the sign in button on the top right corner.</p>

	<% end %>

	<div class="menuLeft">
		<br>
		<ul class="nav flex-column menu">
			<li class="nav-item">
				<a class="nav-link" href="/classrooms/virtual">Access Exercises</a>
			</li>
		</ul>
		<br>
		<%= link_to "Back to dashboard", :home_index %>
	</div>
</div>
